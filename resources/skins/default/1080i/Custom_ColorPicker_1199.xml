<?xml version="1.0" encoding="UTF-8"?>
<window id="1199">
    <defaultcontrol>3110</defaultcontrol>
    <onunload>ClearProperty(colourpicker)</onunload>
    <controls>
        <control type="group">
            <width>980</width>
            <height>720</height>
            <centertop>50%</centertop>
            <centerleft>50%</centerleft>
            <control type="image">
                <left>-2000</left>
                <top>-2000</top>
                <width>6000</width>
                <height>6000</height>
                <animation effect="fade" time="300">VisibleChange</animation>
                <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
                <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
                <texture colordiffuse="C2FFFFFF">colors/ff000000.png</texture>
            </control>
            <control type="group">
                <width>980</width>
                <height>720</height>
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <right>0</right>
                    <bottom>0</bottom>
                    <texture colordiffuse="FF1A2123">colors/ffffffff.png</texture>
                </control>
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <right>0</right>
                    <height>70</height>
                    <texture colordiffuse="ff01579b" border="2">colors/ffffffff.png</texture>
                </control>
                <control type="label">
                    <left>40</left>
                    <top>0</top>
                    <right>100</right>
                    <height>70</height>
                    <font>font32_title</font>
                    <label>Color Picker</label>
                    <aligny>center</aligny>
                    <shadowcolor>black</shadowcolor>
                </control>
            </control>
            <!-- Dialog Content -->
            <control type="group">
                <left>30</left>
                <right>30</right>
                <bottom>30</bottom>
                <top>120</top>
                <!-- Swatches -->
                <control type="group">
                    <right>320</right>
                    <!-- Colors Panel -->
                    <control type="panel" id="3110">
                        <onup>3110</onup>
                        <ondown>3110</ondown>
                        <onback>3012</onback>
                        <onleft>8999</onleft>
                        <onright>8999</onright>
                        <scrolltime tween="sine" easing="out">50</scrolltime>
                        <orientation>horizontal</orientation>
                        <viewtype>wrap</viewtype>
                        <preloaditems>2</preloaditems>
                        <onclick>Skin.SetString(choosen_colour.name,$INFO[ListItem.Label])</onclick>
                        <onclick>SetProperty(choosen_colour, $INFO[ListItem.Label])</onclick>
                        <onclick>SetFocus(3010)</onclick>
                        <itemlayout width="80" height="80">
                            <control type="image">
                                <texture>$INFO[ListItem.Icon]</texture>
                            </control>
                            <control type="image">
                                <top>100</top>
                                <height>80</height>
                                <texture>$INFO[ListItem.Icon2]</texture>
                            </control>
                        </itemlayout>
                        <focusedlayout width="80" height="80">
                            <control type="image">
                                <label>ffffffff</label>
                                <texture>$INFO[ListItem.Icon]</texture>
                            </control>
                            <control type="button">
                                <visible>false</visible>
                                <onfocus>Skin.SetString(choosen_colour.name, $INFO[ListItem.Label])</onfocus>
                            </control>
                            <control type="image">
                                <top>-25</top>
                                <left>-25</left>
                                <width>130</width>
                                <height>130</height>
                                <bordersize>20</bordersize>
                                <bordertexture border="32" colordiffuse="black">common/shadow-20.png</bordertexture>
                                <texture border="20" colordiffuse="ffffffff">common/selectbox.png</texture>
                            </control>
                        </focusedlayout>
                        <content>plugin://plugin.video.tvpgo?colorpicker=tiles</content>
                    </control>
                </control>
                <!-- Buttons -->
                <control type="grouplist">
                    <right>-40</right>
                    <width>380</width>
                    <orientation>vertical</orientation>
                    <itemgap>0</itemgap>
                    <usecontrolcoords>true</usecontrolcoords>
                    <!-- Colours Preview -->
                    <control type="group">
                        <left>80</left>
                        <right>80</right>
                        <height>110</height>
                        <visible>true</visible>
                        <control type="group">
                            <width>86.67</width>
                            <centerleft>50%</centerleft>
                            <control type="label">
                                <align>center</align>
                                <height>20</height>
                                <font>font12</font>
                                <textcolor>white</textcolor>
                                <left>-10</left>
                                <right>-10</right>
                                <align>center</align>
                                <label>Highlight</label>
                            </control>
                            <control type="group">
                                <top>40</top>
                                <height>40</height>
                                <control type="image">
                                    <texture border="32" colordiffuse="black">common/shadow-20.png</texture>
                                    <visible>!Control.HasFocus(3021)</visible>
                                </control>
                                <control type="button" id="3021">
                                    <texturefocus/>
                                    <texturenofocus/>
                                    <font/>
                                    <textcolor>00ffffff</textcolor>
                                    <onleft>3023</onleft>
                                    <onright>3022</onright>
                                    <onup>3012</onup>
                                    <ondown>3015</ondown>
                                    <onclick>SetProperty(colourpicker,Highlight)</onclick>
                                    <onclick>SetFocus(3110)</onclick>
                                </control>
                                <control type="group">
                                    <control type="image">
                                        <texture colordiffuse="Skin.String(choosen_colour.name)" border="5">common/box.png</texture>
                                        <visible>!Control.HasFocus(3110) | false</visible>
                                    </control>
                                    <control type="image">
                                        <texture colordiffuse="$INFO[Skin.String(choosen_colour.name)]" border="5">common/box.png</texture>
                                        <visible>Control.HasFocus(3110) + true</visible>
                                    </control>
                                    <control type="image">
                                        <bordersize>20</bordersize>
                                        <bordertexture border="32" colordiffuse="black">common/shadow-20.png</bordertexture>
                                        <texture border="20" colordiffuse="Skin.String(choosen_colour.name)">common/selectbox.png</texture>
                                        <visible>Control.HasFocus(3021)</visible>
                                    </control>
                                </control>
                                <control type="image">
                                    <centertop>50%</centertop>
                                    <centerleft>50%</centerleft>
                                    <width>16</width>
                                    <height>16</height>
                                    <texture>diffuse/circle.png</texture>
                                    <visible>true</visible>
                                </control>
                            </control>
                        </control>
                    </control>
                    <!-- Button grouplist -->
                    <control type="grouplist" id="8999">
                        <left>40</left>
                        <right>40</right>
                        <orientation>vertical</orientation>
                        <itemgap>10</itemgap>
                        <onleft>3110</onleft>
                        <onright>3110</onright>
                        <height>350</height>
                        <onup condition="true">3021</onup>
                        <onup condition="String.IsEqual(Window.Property(colourpicker),$LOCALIZE[31202])">3023</onup>
                        <ondown condition="true">3021</ondown>
                        <ondown condition="String.IsEqual(Window.Property(colourpicker),$LOCALIZE[31202])">3023
                        </ondown>
                        <!-- EDIT -->
                        <control type="button" id="3010">
                            <textoffsetx>10</textoffsetx>
                            <label>Value: $INFO[Skin.String(choosen_colour.name)]</label>
                            <align>center</align>
                            <texturefocus colordiffuse="ff01579b" border="5">common/box.png</texturefocus>
                            <alttexturefocus colordiffuse="ff01579b" border="5">common/box.png</alttexturefocus>
                            <textoffsetx>40</textoffsetx>
                            <top>0</top>
                            <height>75</height>
                            <aligny>center</aligny>
                            <texturenofocus/>
                            <texturefocus/>
                            <alttexturefocus/>
                            <onclick condition="true">Skin.SetString(choosen_colour.name)</onclick>
                        </control>
                        <!-- Close -->
                        <control type="button" id="3012">
                            <label>$LOCALIZE[15067]</label>
                            <align>center</align>
                            <texturefocus colordiffuse="ff01579b" border="5">common/box.png</texturefocus>
                            <alttexturefocus colordiffuse="ff01579b" border="5">common/box.png</alttexturefocus>
                            <textoffsetx>40</textoffsetx>
                            <top>0</top>
                            <height>75</height>
                            <aligny>center</aligny>
                            <texturenofocus/>
                            <texturefocus/>
                            <alttexturefocus/>
                            <onclick>Action(Close)</onclick>
                        </control>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>